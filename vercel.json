{
  "version": 2,
  "crons": [
    {
      "path": "/api/cron-price-scanner",
      "schedule": "*/5 * * * *"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/brainrots/:path*",
      "destination": "/public/brainrots/:path*"
    },
    {
      "source": "/brainrots-mapping.json",
      "destination": "/public/brainrots-mapping.json"
    }
  ]
}
