# Farmer Panel - Environment Variables
# Copy this file to .env and fill in your values

# MySQL Database Connection
MYSQL_URI=mysql://farmerpanel:YOUR_PASSWORD@localhost:3306/farmerpanel
# Or use separate variables:
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=farmerpanel
# MYSQL_PASSWORD=YOUR_PASSWORD
# MYSQL_DATABASE=farmerpanel

# Server Configuration
PORT=3001
NODE_ENV=production

# Optional: Farm data paths (defaults work for local development)
# FARM_DATA_PATH=/path/to/farm_data
# BRAINROT_IMAGES_PATH=/path/to/brainrot_images

# Optional: Gemini AI API Key (for AI price parsing)
# GEMINI_API_KEY=your_gemini_api_key
